{
    "compilerOptions": {
        "jsx": "react",
        "allowJs": true,
        "strict": false,
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "./dist",
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },

    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
