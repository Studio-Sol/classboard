{
    "compilerOptions": {
        "allowJs": true,
        "strict": false,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
